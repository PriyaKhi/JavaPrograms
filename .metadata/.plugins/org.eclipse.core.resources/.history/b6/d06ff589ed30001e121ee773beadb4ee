package PriyaPractice;

import java.util.HashMap;
import java.util.Map.Entry;

public class countPrograms {

	public static void main(String[] args) {
		countNumberOfdigitAlphaberSpecialCharacter();
		countNumberofWords();

		int arr[] = { 10, 20, 40, 10, 50, 50, 10, 1 };
		countDuplicateNumbersInArray(arr);
//		countDuplicateWords();
//		countDuplicateLetters();

	}

	public static void countNumberOfdigitAlphaberSpecialCharacter() {
		String s = "Priya1Khiwal@%!%^!^!3";
		int digCount = 0;
		int alphaCount = 0;
		int specialCount = 0;
		for (int i = 0; i < s.length(); i++) {
			if (Character.isDigit(s.charAt(i))) {
				digCount++;
			} else if (Character.isAlphabetic(s.charAt(i))) {
				alphaCount++;
			} else {
				specialCount++;
			}
		}
		System.out.println(digCount);
		System.out.println(alphaCount);
		System.out.println(specialCount);
	}

	public static void countNumberofWords() {
		String s = "This is Priya Khiwal";
		String[] arr = s.split(" ");
		for (int i = 0; i < arr.length; i++) {
			arr[i] = arr[i].replaceAll("[^a-zA-Z0-9]", "");
		}
		System.out.println(arr.length);
	}

	public static void countDuplicateNumbersInArray(int[] arr) {

		HashMap<Integer, Integer> hm = new HashMap<Integer, Integer>();
		for (int i = 0; i < arr.length; i++) {
			if (hm.containsKey(arr[i])) {
				hm.put(arr[i], hm.get(arr[i]) + 1);
			} else {
				hm.put(arr[i], 1);
			}
		}
		for (Entry<Integer, Integer> a : hm.entrySet()) {
			System.out.println(a.getKey() + "  " + a.getValue());
		}
		System.out.println(hm);
	}

	public static void countDuplicateWords() {
		String s = "This is the time of the life";
		char[] arr = s.toCharArray();

		HashMap<Integer, Integer> hm = new HashMap<Integer, Integer>();
		for (int i = 0; i < arr.length; i++) {
			if (hm.containsKey(arr[i])) {
				hm.put(arr[i], hm.get(arr[i]+1));
			} else {
				hm.put(arr[i], 1);
			}
		}
		for (Entry<Integer, Integer> a : hm.entrySet()) {
			System.out.println(a.getKey() + "  " + a.getValue());
		}
		System.out.println(hm);
	}
}
