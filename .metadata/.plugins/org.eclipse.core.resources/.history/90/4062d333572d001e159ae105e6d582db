package PriyaPractice;

import java.util.Arrays;

public class reverseArray {

	public static void intReverse(int[] arr) {
		int j = 0;
		int temp = 0;

		for (int i = arr.length - 1; i >= j; i--) {
			temp = arr[i];
			arr[i] = arr[j];
			arr[j] = temp;

			j++;
		}
		System.out.println(Arrays.toString(arr));
	}

	public static void stringReverse(String s) {
		String rev = "";
		for (int i = s.length() - 1; i >= 0; i--) {
			rev += s.charAt(i);
		}
		System.out.println(rev);
	}

	public static void intReverse(int num) {
		int rev = 0;
		while (num > 0) {
			rev = rev * 10 + (num % 10);
			num = num / 10;
		}

		System.out.println(rev);
	}

	public static void charReverse(char[] arr) {
		char temp = 0;
		int j = 0;
		for (int i = arr.length - 1; i >= j; i--) {
			temp = arr[i];
			arr[i] = arr[j];
			arr[j] = temp;

			j++;
		}
		System.out.print(Arrays.toString(arr));
	}

	public static void main(String[] args) {

		int[] intArr = { 1, 4, 9, 4, 0 };
		intReverse(intArr);

		String str = "Priya";
		stringReverse(str);

		int num = 987654321;
		intReverse(num);

		char[] charArray = { 'A', 'B', 'C', 'D' };
		charReverse(charArray);
	}
}
